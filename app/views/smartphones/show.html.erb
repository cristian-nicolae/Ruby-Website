<% content_for :body_class, 'bg-light' %>

<section class="section smartphone-show">
  <div class="columns">
    <div class="column is-8">
      <h1 class="title is-2"><%= @smartphone.title %></h1>

      <ul class="pv1">
        <% if @smartphone.brand? %>
        <li class="inline-block pr3"><%= @smartphone.brand %></li>
        <% end %>

        <li class="inline-block pr3"><%= @smartphone.model %></li>

        <% if @smartphone.condition? %>
        <li class="inline-block pr3"><%= @smartphone.condition %></li>
        <% end %>
      </ul>

      <div class="feature-image">
        <%= image_tag(@smartphone.image_url(:default)) %>
      </div>

      <div class="content pa4 mt3 bg-white border-radius-3">

      <h3 class="subtitle is-4">Description</h3>
      <%= @smartphone.description %>


      <h3 class="subtitle is-4 pt5">Product Specs</h3>

      <table class="table is-narrow">
        <% if @smartphone.condition %>
        <tr>
          <td class="has-text-weight-bold">Condition:</td>
          <td><%= @smartphone.condition %></td>
        </tr>
        <% end %>

        <% if @smartphone.color %>
          <tr>
            <td class="has-text-weight-bold">Color:</td>
            <td><%= @smartphone.color %></td>
          </tr>
        <% end %>

        <% if @smartphone.brand %>
          <tr>
            <td class="has-text-weight-bold">Brand:</td>
            <td><%= @smartphone.brand %></td>
          </tr>
        <% end %>

        <tr>
          <td class="has-text-weight-bold">Model:</td>
          <td><%= @smartphone.model %></td>
        </tr>
      </table>
    </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@smartphone.price) %></h4>
        <p class="has-text-centered mb4">Sold by <%= @smartphone.user.name %></p>
        <%= button_to 'Add to cart', '#', class: 'button is-warning add-to-cart' %>
      </div>
    </div>
  </div>

  <% if smartphone_author(@smartphone) %>
    <%= link_to 'Edit', edit_smartphone_path(@smartphone), class: 'button' %>
  <% end %>
</section>