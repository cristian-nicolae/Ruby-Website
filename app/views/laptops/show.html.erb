<% content_for :body_class, 'bg-light' %>

<section class="section laptop-show">
  <div class="columns">
    <div class="column is-8">
      <h1 class="title is-2"><%= @laptop.title %></h1>

      <ul class="pv1">
        <% if @laptop.brand? %>
        <li class="inline-block pr3"><%= @laptop.brand %></li>
        <% end %>

        <li class="inline-block pr3"><%= @laptop.model %></li>

        <% if @laptop.condition? %>
        <li class="inline-block pr3"><%= @laptop.condition %></li>
        <% end %>
      </ul>

      <div class="feature-image">
        <%= image_tag(@laptop.image_url(:default)) %>
      </div>

      <div class="content pa4 mt3 bg-white border-radius-3">

      <h3 class="subtitle is-4">Description</h3>
      <%= @laptop.description %>


      <h3 class="subtitle is-4 pt5">Product Specs</h3>

      <table class="table is-narrow">
        <% if @laptop.condition %>
        <tr>
          <td class="has-text-weight-bold">Condition:</td>
          <td><%= @laptop.condition %></td>
        </tr>
        <% end %>

        <% if @laptop.finish %>
          <tr>
            <td class="has-text-weight-bold">Finish:</td>
            <td><%= @laptop.finish %></td>
          </tr>
        <% end %>

        <% if @laptop.brand %>
          <tr>
            <td class="has-text-weight-bold">Brand:</td>
            <td><%= @laptop.brand %></td>
          </tr>
        <% end %>

        <tr>
          <td class="has-text-weight-bold">Model:</td>
          <td><%= @laptop.model %></td>
        </tr>
      </table>
    </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@laptop.price) %></h4>
        <p class="has-text-centered mb4">Sold by <%= @laptop.user.name %></p>
        <%= button_to 'Add to cart', '#', class: 'button is-warning add-to-cart' %>
      </div>
    </div>
  </div>

  <% if laptop_author(@laptop) %>
    <%= link_to 'Edit', edit_laptop_path(@laptop), class: 'button' %>
  <% end %>
</section>